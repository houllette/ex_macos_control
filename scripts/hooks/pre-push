#!/bin/bash
# Pre-push hook for ExMacOSControl
# Final verification before pushing to remote

set -e  # Exit on first error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo ""
echo "üöÄ Running pre-push checks..."
echo ""

# 1. Check if mix.lock is up to date
echo "üì¶ Verifying mix.lock is up to date..."
if ! mix deps.get --check-locked 2>/dev/null; then
  echo -e "${RED}‚ùå mix.lock is out of date!${NC}"
  echo -e "${YELLOW}Run 'mix deps.get' to update dependencies${NC}"
  exit 1
fi
echo -e "${GREEN}‚úÖ mix.lock is up to date${NC}"
echo ""

# 2. Run mix quality (format check, credo, dialyzer)
echo "üîß Running mix quality checks..."
if ! mix quality; then
  echo -e "${RED}‚ùå Quality checks failed!${NC}"
  echo -e "${YELLOW}Fix the issues before pushing${NC}"
  exit 1
fi
echo -e "${GREEN}‚úÖ All quality checks passed${NC}"
echo ""

# 3. Generate SBOM
echo "üìã Generating SBOM (Software Bill of Materials)..."
if ! mix sbom.cyclonedx -d; then
  echo -e "${RED}‚ùå SBOM generation failed!${NC}"
  echo -e "${YELLOW}Check sbom errors above${NC}"
  exit 1
fi
echo -e "${GREEN}‚úÖ SBOM generated successfully${NC}"
echo ""

# 4. Run tests
echo "üß™ Running test suite..."
if ! mix test; then
  echo -e "${RED}‚ùå Tests failed!${NC}"
  echo -e "${YELLOW}Fix failing tests before pushing${NC}"
  exit 1
fi
echo -e "${GREEN}‚úÖ All tests passed${NC}"
echo ""

# 5. Check for uncommitted SBOM changes
if [ -f "sbom.cyclonedx.json" ]; then
  if ! git diff --quiet sbom.cyclonedx.json 2>/dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  sbom.cyclonedx.json has uncommitted changes${NC}"
    echo -e "${YELLOW}Commit the SBOM file before pushing${NC}"
    exit 1
  fi
elif [ -f "priv/sbom.cyclonedx.json" ]; then
  if ! git diff --quiet priv/sbom.cyclonedx.json 2>/dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  priv/sbom.cyclonedx.json has uncommitted changes${NC}"
    echo -e "${YELLOW}Commit the SBOM file before pushing${NC}"
    exit 1
  fi
fi

echo -e "${GREEN}üéâ All pre-push checks passed! Safe to push.${NC}"
echo ""

exit 0
